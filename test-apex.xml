<project name="codeScanProject_apex" default="pmd" basedir=".">
  <description>
    simple example build file
  </description>

<path id="lib.path.ref">
    <fileset dir="./lib" includes="*.jar"/>
 </path>

<target name="pmd" >
    <taskdef name="pmd" classpathref="lib.path.ref" classname="net.sourceforge.pmd.ant.PMDTask"/>
    <pmd shortFilenames="true">
        <ruleset>rulesets/apex/ruleset.xml</ruleset>
        <formatter type="html" toFile="./out/pmd_report_apex.html">
            <param name="linkPrefix" value="http://pmd.sourceforge.net/xref/"/>
        </formatter>
        <fileset dir="./src/apex/">
            <include name="*.cls"/>
        </fileset>
    </pmd>
</target>
</project>
