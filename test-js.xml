<project name="codeScanProject_js" default="pmd" basedir=".">
  <description>PMD code scan for js </description>

<path id="lib.path.ref">
    <fileset dir="./lib" includes="*.jar"/>
 </path>

<target name="pmd" >
    <taskdef name="pmd" classpathref="lib.path.ref" classname="net.sourceforge.pmd.ant.PMDTask"/>
    <pmd shortFilenames="true">
        <ruleset>rulesets/ecmascript/basic.xml,rulesets/ecmascript/braces.xml,rulesets/ecmascript/unnecessary.xml,rulesets/ecmascript/controversial.xml
        </ruleset>
        <formatter type="html" toFile="./out/pmd_report_js.html">
            <param name="linkPrefix" value="http://pmd.sourceforge.net/xref/"/>
        </formatter>
        <fileset dir="./src/js/">
            <include name="*.js"/>
        </fileset>
    </pmd>
</target>
</project>
